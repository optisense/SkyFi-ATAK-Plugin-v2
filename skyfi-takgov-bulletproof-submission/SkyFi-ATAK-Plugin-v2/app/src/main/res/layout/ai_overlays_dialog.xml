<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/skyfi_dialog_bg"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_layers"
            android:tint="#4CAF50" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:text="AI Analysis Layers"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/active_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 active"
            android:textColor="#4CAF50"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Layer Toggle List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Object Detection Layer -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#2C2C2C"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🔍 Object Detection"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AI-detected vehicles, buildings, and equipment"
                            android:textColor="#CCFFFFFF"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/object_detection_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 objects"
                            android:textColor="#4CAF50"
                            android:textSize="10sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/object_detection_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="#4CAF50"
                        android:trackTint="#666666" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Threat Analysis Layer -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#2C2C2C"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🚨 Threat Analysis"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Threat probability heatmap and risk assessment"
                            android:textColor="#CCFFFFFF"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/threat_analysis_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 threats"
                            android:textColor="#FF5722"
                            android:textSize="10sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/threat_analysis_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="#FF5722"
                        android:trackTint="#666666" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Movement Prediction Layer -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#2C2C2C"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📍 Movement Prediction"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Predicted movement patterns and trajectories"
                            android:textColor="#CCFFFFFF"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/movement_prediction_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 predictions"
                            android:textColor="#FFEB3B"
                            android:textSize="10sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/movement_prediction_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="#FFEB3B"
                        android:trackTint="#666666" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Population Density Layer -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#2C2C2C"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="👥 Population Density"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Population distribution and density mapping"
                            android:textColor="#CCFFFFFF"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/population_density_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 areas"
                            android:textColor="#03A9F4"
                            android:textSize="10sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/population_density_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="#03A9F4"
                        android:trackTint="#666666" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Infrastructure Status Layer -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#2C2C2C"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🏗️ Infrastructure Status"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Critical infrastructure health monitoring"
                            android:textColor="#CCFFFFFF"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/infrastructure_status_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 facilities"
                            android:textColor="#9C27B0"
                            android:textSize="10sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/infrastructure_status_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="#9C27B0"
                        android:trackTint="#666666" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Weather Overlay Layer -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#2C2C2C"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🌦️ Weather Overlay"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AI-powered weather analysis and forecasting"
                            android:textColor="#CCFFFFFF"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/weather_overlay_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 zones"
                            android:textColor="#FF9800"
                            android:textSize="10sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/weather_overlay_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="#FF9800"
                        android:trackTint="#666666" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Route Optimization Layer -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#2C2C2C"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🗺️ Route Optimization"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Optimized routes and waypoint suggestions"
                            android:textColor="#CCFFFFFF"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/route_optimization_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 routes"
                            android:textColor="#E91E63"
                            android:textSize="10sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/route_optimization_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="#E91E63"
                        android:trackTint="#666666" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/refresh_all_layers_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Refresh All"
            android:background="@drawable/skyfi_button_secondary"
            android:textColor="#FFFFFF"
            android:layout_marginRight="8dp" />

        <Button
            android:id="@+id/clear_all_layers_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear All"
            android:background="@drawable/skyfi_button_secondary"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="8dp" />

    </LinearLayout>

</LinearLayout>