<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- SkyFi Modern Theme -->
    <style name="SkyFiTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@color/skyfi_background</item>
        <item name="android:colorBackground">@color/skyfi_background</item>
        <item name="android:textColor">@color/skyfi_text_primary</item>
        <item name="android:textColorPrimary">@color/skyfi_text_primary</item>
        <item name="android:textColorSecondary">@color/skyfi_text_secondary</item>
    </style>
    
    <!-- Typography Styles -->
    <style name="SkyFiTextHeading">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/skyfi_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    
    <style name="SkyFiTextSubheading">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/skyfi_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="SkyFiTextBody">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/skyfi_text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    
    <style name="SkyFiTextCaption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/skyfi_text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Card Styles -->
    <style name="SkyFiCard">
        <item name="android:background">@drawable/skyfi_card_bg</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>
    
    <!-- Button Styles -->
    <style name="SkyFiButtonPrimary" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/skyfi_button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <style name="SkyFiButtonSecondary" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/skyfi_button_secondary</item>
        <item name="android:textColor">@color/skyfi_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <!-- List Item Styles -->
    <style name="SkyFiListItem">
        <item name="android:background">@drawable/skyfi_list_item_bg</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    
    <!-- Dialog Styles -->
    <style name="SkyFiDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@drawable/skyfi_dialog_bg</item>
        <item name="android:windowTitleStyle">@style/SkyFiDialogTitle</item>
    </style>
    
    <style name="SkyFiDialogTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/skyfi_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
</resources>