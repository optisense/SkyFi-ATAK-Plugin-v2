# direnv configuration for SkyFi ATAK Plugin
# This file automatically sets up the Java environment when entering this directory
# Install direnv with: brew install direnv
# Then add 'eval "$(direnv hook bash)"' or 'eval "$(direnv hook zsh)"' to your shell profile

# Set JAVA_HOME for ATAK plugin development (requires Java 11)
export JAVA_HOME="/opt/homebrew/Cellar/openjdk@11/11.0.28/libexec/openjdk.jdk/Contents/Home"

# Add Java binaries to PATH
export PATH="$JAVA_HOME/bin:$PATH"

echo "ğŸš€ SkyFi ATAK Plugin development environment activated"
echo "Java Home: $JAVA_HOME"
echo "Java Version: $(java -version 2>&1 | head -1)"