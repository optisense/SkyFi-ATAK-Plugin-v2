<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fadeScrollbars="false"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

             <Button
                 android:id="@+id/controlButton"
                 style="@style/darkButton"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:padding="6dp"
                 android:text="@string/start" />

            <Button
                android:id="@+id/resetButton"
                style="@style/darkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/reset"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="6"
            android:columnCount="3">

            <TextView
                android:id="@+id/lowerLeftLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_row="0"
                android:layout_column="0"
                android:text="@string/lower_left" />

            <EditText
                android:id="@+id/lat1Entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_row="0"
                android:layout_column="1"
                android:text="30"
                android:hint="@string/latitude"
                android:inputType="numberDecimal"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/lon1Entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_row="0"
                android:layout_column="2"
                android:text="50"
                android:hint="@string/longitude"
                android:inputType="numberDecimal"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/upperRightLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_row="1"
                android:layout_column="0"
                android:text="@string/upper_right" />

            <EditText
                android:id="@+id/lat2Entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_row="1"
                android:layout_column="1"
                android:text="40"
                android:hint="@string/latitude"
                android:inputType="numberDecimal"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/lon2Entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_row="1"
                android:layout_column="2"
                android:text="60"
                android:hint="@string/longitude"
                android:inputType="numberDecimal"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/countLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_row="2"
                android:layout_column="0"
                android:text="@string/count" />

            <EditText
                android:id="@+id/countEntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_row="2"
                android:layout_column="1"
                android:text="10"
                android:hint="@string/count"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/intervalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_row="3"
                android:layout_column="0"
                android:text="@string/interval" />

            <EditText
                android:id="@+id/intervalEntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_row="3"
                android:layout_column="1"
                android:text="500"
                android:hint="@string/interval"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/threadsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_row="4"
                android:layout_column="0"
                android:text="@string/threads" />

            <EditText
                android:id="@+id/threadsEntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_row="4"
                android:layout_column="1"
                android:text="1"
                android:hint="@string/threads"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/updateCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_row="5"
                android:layout_column="0"
                android:text="@string/updates"/>
        </GridLayout>
    </LinearLayout>
</ScrollView>
