<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_feed_alias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="alias"
        android:inputType="text"
        android:hint="Alias"/>

    <EditText
        android:id="@+id/edit_feed_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="uid"
        android:inputType="textUri"
        android:hint="URL"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_select_vc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Select Collection"/>

        <ImageButton
            android:id="@+id/btn_add_vc"
            style="@style/darkButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_plus"
            android:padding="5dp"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/adds_video_collection" />

    </LinearLayout>

</LinearLayout>