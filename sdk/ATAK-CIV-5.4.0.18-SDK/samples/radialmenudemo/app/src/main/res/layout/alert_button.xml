<?xml version="1.0" encoding="utf-8"?>
<com.atakmap.android.radialmenudemo.AlertButtonView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.atakmap.android.radialmenudemo.WidgetIconView
                android:id="@+id/widget_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"/>
            <com.atakmap.android.radialmenudemo.OnClickView
                android:id="@+id/onclick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"/>
            <com.atakmap.android.radialmenudemo.SubmenuView
                android:id="@+id/submenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/disabledTitle"/>
                <Switch
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:id="@+id/disabledValue"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center_horizontal"
                        android:layout_weight="2"
                        android:textSize="18sp"
                        android:text="@string/weightTitle"/>
                    <TextView
                        android:gravity="center_horizontal"
                        android:layout_weight="3"
                        android:textSize="18sp"
                        android:text="@string/radius"/>
                    <TextView
                        android:gravity="center_horizontal"
                        android:layout_weight="2"
                        android:textSize="18sp"
                        android:text="@string/width"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/weight"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:inputType="numberDecimal"/>
                    <EditText
                        android:id="@+id/radius"
                        android:layout_weight="3"
                        android:gravity="center_horizontal"
                        android:inputType="numberDecimal"/>
                    <EditText
                        android:id="@+id/width"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:inputType="numberDecimal"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</com.atakmap.android.radialmenudemo.AlertButtonView>