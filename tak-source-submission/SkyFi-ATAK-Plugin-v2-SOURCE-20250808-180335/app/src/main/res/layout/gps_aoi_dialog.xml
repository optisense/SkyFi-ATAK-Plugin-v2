<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create AOI from GPS Location"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Location Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Location: "
            android:textStyle="bold" />
            
        <TextView
            android:id="@+id/current_location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..." />
    </LinearLayout>

    <!-- GPS Accuracy -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPS Accuracy: "
            android:textStyle="bold" />
            
        <TextView
            android:id="@+id/gps_accuracy_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="±5m" />
    </LinearLayout>

    <!-- AOI Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AOI Name:"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />
        
    <EditText
        android:id="@+id/aoi_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter AOI name"
        android:layout_marginBottom="16dp" />

    <!-- Shape Selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AOI Shape:"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />
        
    <RadioGroup
        android:id="@+id/shape_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        
        <RadioButton
            android:id="@+id/shape_square"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Square"
            android:checked="true" />
            
        <RadioButton
            android:id="@+id/shape_circle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Circle" />
    </RadioGroup>

    <!-- Size Selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AOI Size:"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />
        
    <SeekBar
        android:id="@+id/size_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp" />
        
    <TextView
        android:id="@+id/size_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5 km diameter (19.6 sq km)"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Warning for minimum size -->
    <TextView
        android:id="@+id/size_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⚠️ Minimum area for tasking: 5 sq km"
        android:textColor="#FF9800"
        android:visibility="gone"
        android:layout_marginBottom="16dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:layout_marginRight="8dp" />
            
        <Button
            android:id="@+id/create_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Create AOI"
            android:layout_marginLeft="8dp" />
    </LinearLayout>
</LinearLayout>