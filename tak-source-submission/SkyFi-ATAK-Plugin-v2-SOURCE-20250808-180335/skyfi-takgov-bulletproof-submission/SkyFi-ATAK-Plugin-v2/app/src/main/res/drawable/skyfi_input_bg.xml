<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/input_bg" />
            <corners android:radius="8dp" />
            <stroke
                android:width="2dp"
                android:color="@color/input_border_focused" />
            <padding
                android:left="12dp"
                android:top="10dp"
                android:right="12dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/skyfi_background" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/skyfi_divider" />
            <padding
                android:left="12dp"
                android:top="10dp"
                android:right="12dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/input_bg" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/input_border" />
            <padding
                android:left="12dp"
                android:top="10dp"
                android:right="12dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>