    android:orientation="horizontal"
    android:gravity="center_vertical" >
    
    <Button
        android:id="@+id/importManagerBrowserIcon"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:textSize="@dimen/draper_small_font"
        android:textColor="#FFF"
        android:gravity="center"
        android:background="@drawable/import_folder_icon"
        android:layout_margin="8dip"/>
    
    <TextView 
        android:id="@+id/importManagerBrowserFileName"
        android:layout_weight="1"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:textSize="@dimen/draper_title_font"
        android:textColor="#FFF"/>
    
    <TextView 
        android:id="@+id/importManagerBrowserFileInfo"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textSize="@dimen/draper_title_font"
        android:textColor="#FFF"/>
    
    <CheckBox 
           android:id="@+id/importManagerBrowserFileSelected"
           android:layout_width="wrap_content"
        android:layout_height="wrap_content">
       </CheckBox>
    
