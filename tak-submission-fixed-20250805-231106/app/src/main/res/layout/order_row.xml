<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/order_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Order"
        android:textSize="20sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/aoi_sqkm_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:textStyle="bold"
            android:text="@string/km2"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/aoi_sqkm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp" />
        <ImageView
            android:src="@drawable/cloud"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:paddingStart="20dp"
            />
        <TextView
            android:id="@+id/cloud_coverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp" />
        <ImageView
            android:src="@drawable/map_dollar"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="5dp"
            />
        <TextView
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/resolution_label"
            android:text="@string/resolution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingStart="5dp"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/resolution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/status_label"
            android:text="@string/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/provider_label"
            android:text="@string/provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingStart="5dp"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp" />

    </LinearLayout>

    <!-- Opacity control for SAR imagery -->
    <LinearLayout
        android:id="@+id/opacity_control_section"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opacity:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingEnd="8dp"
            android:gravity="center_vertical" />

        <SeekBar
            android:id="@+id/opacity_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="80"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/opacity_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80%"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#0080FF"
            android:minWidth="40dp"
            android:gravity="center" />

        <Button
            android:id="@+id/opacity_advanced_button"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="âš™"
            android:textSize="12sp"
            android:layout_marginStart="4dp"
            android:background="@drawable/btn_gray"
            android:minWidth="32dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

</LinearLayout>