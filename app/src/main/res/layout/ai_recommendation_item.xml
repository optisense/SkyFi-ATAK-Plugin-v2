<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="#2C2C2C"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Priority Indicator -->
        <View
            android:id="@+id/recommendation_priority_indicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#FF5722"
            android:layout_marginRight="12dp" />

        <!-- Type Icon -->
        <TextView
            android:id="@+id/recommendation_type_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="ðŸš¨"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginRight="12dp" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title and Confidence -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/recommendation_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vehicle convoy detected"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/recommendation_confidence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="87%"
                    android:textColor="#4CAF50"
                    android:textSize="10sp"
                    android:background="@drawable/skyfi_dialog_bg"
                    android:padding="4dp"
                    android:layout_marginLeft="8dp" />

            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/recommendation_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3 military vehicles moving northeast at 2.1km"
                android:textColor="#CCFFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <!-- Timestamp -->
            <TextView
                android:id="@+id/recommendation_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2m ago"
                android:textColor="#99FFFFFF"
                android:textSize="10sp"
                android:layout_marginTop="4dp" />

            <!-- Action Buttons -->
            <LinearLayout
                android:id="@+id/recommendation_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="start" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>