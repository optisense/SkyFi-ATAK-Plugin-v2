<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/skyfi_card_bg"
    android:elevation="12dp">

    <!-- Compact View (Default) -->
    <LinearLayout
        android:id="@+id/ai_compact_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@drawable/skyfi_button_primary"
        android:clickable="true"
        android:focusable="true">

        <!-- AI Status Indicator -->
        <ImageView
            android:id="@+id/ai_status_indicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_ai_brain"
            android:tint="#4CAF50" />

        <!-- Title and Priority Count -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SkyFi AI Assistant"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ai_priority_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#FFEB3B"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Expand/Collapse Icon -->
        <ImageView
            android:id="@+id/ai_expand_collapse_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_expand_more"
            android:tint="#FFFFFF" />

    </LinearLayout>

    <!-- Expanded View -->
    <LinearLayout
        android:id="@+id/ai_expanded_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#2C2C2C"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_ai_brain"
                android:tint="#4CAF50" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">

                <TextView
                    android:id="@+id/ai_assistant_header_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI Intelligence Updates"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/ai_last_update_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Updated: 14:32:15"
                    android:textColor="#CCFFFFFF"
                    android:textSize="10sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_close"
                android:tint="#CCFFFFFF"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="2dp" />

        </LinearLayout>

        <!-- Recommendations List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ai_recommendations_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="400dp"
            android:background="#1E1E1E"
            android:nestedScrollingEnabled="true" />

        <!-- Quick Actions Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="#2C2C2C"
            android:gravity="center">

            <Button
                android:id="@+id/ai_analyze_area_btn"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="Analyze Area"
                android:textSize="10sp"
                android:background="@drawable/skyfi_button_secondary"
                android:textColor="#FFFFFF"
                android:layout_marginRight="4dp" />

            <Button
                android:id="@+id/ai_clear_all_btn"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="Clear All"
                android:textSize="10sp"
                android:background="@drawable/skyfi_button_secondary"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="4dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>