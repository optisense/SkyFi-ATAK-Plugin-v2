<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/skyfi_dark">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/skyfi_primary"
        android:elevation="4dp"
        android:padding="16dp">

        <TextView
            android:text="@string/skyfi_tasking_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Date Range Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/skyfi_gray"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date Range"
                        android:textColor="@color/skyfi_secondary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <EditText
                        android:id="@+id/from"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:hint="@string/from"
                        android:background="@color/skyfi_dark"
                        android:padding="12dp"
                        android:focusable="false"
                        android:textColor="@color/white"
                        android:textColorHint="@color/skyfi_light_gray" />

                    <EditText
                        android:id="@+id/to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/to"
                        android:background="@color/skyfi_dark"
                        android:padding="12dp"
                        android:focusable="false"
                        android:textColor="@color/white"
                        android:textColorHint="@color/skyfi_light_gray" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Image Parameters Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/skyfi_gray"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Image Parameters"
                        android:textColor="@color/skyfi_secondary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">
                        
                        <EditText
                            android:id="@+id/max_cloud_coverage"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="@string/max_cloud_coverage"
                            android:background="@color/skyfi_dark"
                            android:padding="12dp"
                            android:inputType="numberDecimal"
                            android:textColor="@color/white"
                            android:textColorHint="@color/skyfi_light_gray" />
                            
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textColor="@color/skyfi_light_gray"
                            android:padding="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <EditText
                            android:id="@+id/max_off_nadir"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="@string/max_off_nadir_angle"
                            android:background="@color/skyfi_dark"
                            android:padding="12dp"
                            android:inputType="numberDecimal"
                            android:textColor="@color/white"
                            android:textColorHint="@color/skyfi_light_gray" />
                            
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Â°"
                            android:textColor="@color/skyfi_light_gray"
                            android:padding="12dp" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Product Type Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/skyfi_gray"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_types"
                        android:textColor="@color/skyfi_secondary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <RadioGroup
                        android:id="@+id/product_types"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/product_type_day"
                            android:text="@string/day"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent"
                            android:padding="8dp" />
                        <RadioButton
                            android:id="@+id/product_type_sar"
                            android:text="@string/sar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent"
                            android:padding="8dp" />
                        <RadioButton
                            android:id="@+id/product_type_stereo"
                            android:text="@string/stereo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent"
                            android:padding="8dp" />
                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Resolution Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/skyfi_gray"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/resolution"
                        android:textColor="@color/skyfi_secondary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <RadioGroup
                        android:id="@+id/resolutions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/resolution_high"
                            android:text="@string/high"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent"
                            android:padding="8dp" />
                        <RadioButton
                            android:id="@+id/resolution_very_high"
                            android:text="@string/very_high"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent"
                            android:padding="8dp" />
                        <RadioButton
                            android:id="@+id/resolution_super_high"
                            android:text="@string/super_high"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent"
                            android:padding="8dp" />
                        <RadioButton
                            android:id="@+id/resolution_ultra_high"
                            android:text="@string/ultra_high"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent"
                            android:padding="8dp" />
                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Providers Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/skyfi_gray"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/providers"
                        android:textColor="@color/skyfi_secondary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <RadioGroup
                        android:id="@+id/providers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/provider_siwei"
                            android:text="@string/siwei"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent"
                            android:padding="8dp" />
                        <RadioButton
                            android:id="@+id/provider_satellogic"
                            android:text="@string/satellogic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent"
                            android:padding="8dp" />
                        <RadioButton
                            android:id="@+id/provider_umbra"
                            android:text="@string/umbra"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent"
                            android:padding="8dp" />
                        <RadioButton
                            android:id="@+id/provider_geosat"
                            android:text="@string/geosat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent"
                            android:padding="8dp" />
                        <RadioButton
                            android:id="@+id/provider_planet"
                            android:text="@string/planet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent"
                            android:padding="8dp" />
                        <RadioButton
                            android:id="@+id/provider_impro"
                            android:text="@string/impro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent"
                            android:padding="8dp" />
                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            
            <!-- Pass Selection Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/skyfi_gray"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pass Selection"
                        android:textColor="@color/skyfi_secondary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />
                    
                    <TextView
                        android:id="@+id/pass_info"
                        android:text="Select specific passes (multiple selection allowed)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/skyfi_light_gray"
                        android:textSize="12sp"
                        android:layout_marginBottom="12dp" />
                    
                    <LinearLayout
                        android:id="@+id/pass_container"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- Sensor Type Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/skyfi_gray"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sensor Type"
                        android:textColor="@color/skyfi_secondary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />
                    
                    <RadioGroup
                        android:id="@+id/sensor_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <RadioButton
                            android:id="@+id/sensor_asap"
                            android:text="ASAP"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent"
                            android:checked="true" />
                            
                        <RadioButton
                            android:id="@+id/sensor_eo"
                            android:text="EO"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent" />
                            
                        <RadioButton
                            android:id="@+id/sensor_sar"
                            android:text="SAR"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent" />
                            
                        <RadioButton
                            android:id="@+id/sensor_adsb"
                            android:text="ADS-B"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent" />
                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            
            <!-- Task Priority Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/skyfi_gray"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Task Priority"
                        android:textColor="@color/skyfi_secondary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />
                    
                    <SeekBar
                        android:id="@+id/task_priority_slider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="50"
                        android:progressTint="@color/skyfi_accent"
                        android:thumbTint="@color/skyfi_accent" />
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Low"
                            android:textColor="@color/skyfi_light_gray"
                            android:textSize="12sp" />
                            
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Medium"
                            android:textColor="@color/skyfi_light_gray"
                            android:textSize="12sp"
                            android:gravity="center" />
                            
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="High"
                            android:textColor="@color/skyfi_light_gray"
                            android:textSize="12sp"
                            android:gravity="end" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            
            <!-- Frequency Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/skyfi_gray"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frequency"
                        android:textColor="@color/skyfi_secondary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />
                    
                    <RadioGroup
                        android:id="@+id/frequency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <RadioButton
                            android:id="@+id/frequency_once"
                            android:text="Once"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent"
                            android:checked="true" />
                            
                        <RadioButton
                            android:id="@+id/frequency_daily"
                            android:text="Daily"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent" />
                            
                        <RadioButton
                            android:id="@+id/frequency_weekly"
                            android:text="Weekly"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent" />
                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            
            <!-- Stereo Options Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/stereo_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/skyfi_gray"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stereo Images"
                        android:textColor="@color/skyfi_secondary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />
                    
                    <RadioGroup
                        android:id="@+id/stereo_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <RadioButton
                            android:id="@+id/stereo_1"
                            android:text="1"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent"
                            android:checked="true" />
                            
                        <RadioButton
                            android:id="@+id/stereo_2"
                            android:text="2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent" />
                            
                        <RadioButton
                            android:id="@+id/stereo_4"
                            android:text="4"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent" />
                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- Polarization Card (for SAR) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/polarization_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/skyfi_gray"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Polarization"
                        android:textColor="@color/skyfi_secondary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />
                        
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        
                        <CheckBox
                            android:id="@+id/pol_hh"
                            android:text="HH"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent" />
                            
                        <CheckBox
                            android:id="@+id/pol_vv"
                            android:text="VV"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent" />
                            
                        <CheckBox
                            android:id="@+id/pol_hv"
                            android:text="HV"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent" />
                            
                        <CheckBox
                            android:id="@+id/pol_vh"
                            android:text="VH"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:buttonTint="@color/skyfi_accent" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- Analytics Options Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/skyfi_gray"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Analytics Options"
                        android:textColor="@color/skyfi_secondary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />
                    
                    <CheckBox
                        android:id="@+id/analytics_object_detection"
                        android:text="Object Detection - Vehicles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:buttonTint="@color/skyfi_accent"
                        android:padding="8dp" />
                        
                    <CheckBox
                        android:id="@+id/analytics_ship_identification"
                        android:text="Ship Identification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:buttonTint="@color/skyfi_accent"
                        android:padding="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- Priority Option Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/skyfi_gray"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/priority"
                        android:text="@string/priority"
                        android:textColor="@color/white"
                        android:buttonTint="@color/skyfi_accent" />

                    <TextView
                        android:id="@+id/priority_price"
                        android:text="@string/priority_extra_cost"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/skyfi_warning"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- Assured Tasking Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/skyfi_gray"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/assured_tasking"
                        android:text="@string/assured_tasking"
                        android:textColor="@color/white"
                        android:buttonTint="@color/skyfi_accent" />

                    <TextView
                        android:id="@+id/assured_tasking_info"
                        android:text="@string/assured_tasking_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/skyfi_light_gray" />

                    <TextView
                        android:id="@+id/assured_tasking_pricing_info"
                        android:text="@string/assured_tasking_pricing_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="4dp"
                        android:textSize="11sp"
                        android:textStyle="italic"
                        android:textColor="@color/skyfi_warning" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- Total Price Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/skyfi_accent"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Estimated Price"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/total_price"
                        android:text="@string/total_price"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/skyfi_gray"
        android:elevation="8dp">

        <Button
            android:id="@+id/reset_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="@string/reset_form"
            android:background="@color/skyfi_dark"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/place_order_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/place_order"
            android:background="@color/skyfi_accent"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>