<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pricing_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    app:cardBackgroundColor="@color/skyfi_dark"
    app:cardCornerRadius="6dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <RadioButton
            android:id="@+id/pricing_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/skyfi_accent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/pricing_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pricing Option"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pricing_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description of pricing option"
                android:textColor="@color/skyfi_light_gray"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/pricing_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textColor="@color/skyfi_accent"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>